{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist/server",
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "webpack-env",
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/server/*"
      ],
      "~/*": [
        "./src/common/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": [ "src/server/server.ts"],
  "include": [
    "src/server/**/*.js",
    "src/server/**/*.ts",
    "src/server/**/*.tsx",
    "src/common/**/*.js",
    "src/common/**/*.ts",
    "src/common/**/*.tsx",
    "tests/server/**/*.ts",
    "tests/server/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
